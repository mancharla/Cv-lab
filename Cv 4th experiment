from transformers import BlipProcessor, BlipForConditional Generation.

from PIL import Image

Import requests

#Load the pre-trained BUP model and processor

model = BlipForConditional Generation.from_pretrained("Salesforce/blip-image-captioning-base") processor = BlipProcessor.from_pretrained("Salesforce/blip-image-captioning-base")

#Load an image

url="https://example.com/your-image.jpg" # Replace with the URL of your image image Image.open(requests.get(url, stream-True).raw)

#Preprocess the image

inputs processor(images image, retum_tensors="pt")

#Generate a caption

outputs model.generate(**inputs)

caption = processor.decode(outputs[0], skip_special_tokens=True)

print("Caption:", caption)
